{
  "compilerOptions": {
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@app/*": ["./*"],
    }
  },
  "include": ["src"]
}
